<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.mapper.PostMapper">
	 <select id="selectPostListByUserId" resultType="com.memo.post.domain.Post">
	 	SELECT
	 		`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
	 	FROM
	 		`post`	
	 	WHERE
	 		`userId` = #{userId}
	 	ORDER BY `id` DESC		
 	</select>
 	
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectPostByPostIdUserId" resultType="com.memo.post.domain.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
	 	FROM
	 		`post`
	 	WHERE
	 		`id` = #{postId}
	 	AND `userId` = #{userId}				
 	</select>
 	
 	<update id="updatePostByPostId" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			<if test="imagePath != null">  <!-- 너무 중요!!!! 이미지가 있을때만 바꿔줌 -->
 			, `imagePath` = #{imagePath}
 			</if>
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{postId}	
 	</update>
 </mapper>